<p style="color: green"><%= notice %></p>

<%= render @post %>

<div>
  <div class="row">
    <div class="col-6">
      <%= link_to "Editar Post", edit_post_path(@post), class: "btn btn-primary" %>
      <%= link_to "Voltar", posts_path, class: "btn btn-primary" %>
    </div>
    <div class="col-6 d-flex justify-content-end">
      <%= button_to "Deletar Post", @post, method: :delete, class: "btn btn-danger mt-3 mb-3" %>
    </div>

  </div>
</div>

<%= render "comments/form", post: @post, comment: @post.comments.build, submit_label: "Replay"  %>

<p class="mt-3">Comentarios do Post do <%= current_user.email.split("@")[0].capitalize %></p>
<% @comments.each do |comment| %>
  <%= render "comments/comment" , post: @post, comment: comment %>
<% end %>
